<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFBFBFC">

    <TextView
        android:id="@+id/id_video_ad_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:text="Title"
        android:textColor="#454545"
        android:textSize="20dp" />

    <RelativeLayout
        android:id="@+id/id_video_main_view"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_below="@+id/id_video_ad_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp">

        <TextureView
            android:id="@+id/id_video_texture_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/id_video_view_thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <include layout="@layout/ad_flag_layout" />

        <RelativeLayout
            android:id="@+id/id_video_play_control"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/id_video_controller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/bt_play" />

            <ProgressBar
                android:id="@+id/id_video_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:visibility="invisible" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_video_main_view"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/layer_ad_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_ad_custom_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/id_ad_custom_action"
            android:singleLine="true"
            android:text="描述"
            android:textColor="#999999"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/id_ad_custom_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/layer_ad_btn"
            android:padding="5dp"
            android:textColor="#ffffff" />
    </RelativeLayout>

</RelativeLayout>