    <FrameLayout
        android:id="@+id/id_video_main_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_video_ad_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp">

        <com.fighter.reaper.sample.videolist.widget.TextureVideoView
            android:id="@+id/id_video_texture_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/id_video_thumb"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop" />

        <include layout="@layout/ad_flag_layout" />

        <com.fighter.reaper.sample.videolist.widget.CircularProgressBar
            android:id="@+id/id_video_progress"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            app:cpb_background_progressbar_color="@android:color/white"
            app:cpb_background_progressbar_width="10dp"
            app:cpb_progressbar_color="@color/colorPrimary"
            app:cpb_progressbar_width="10dp" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_video_main_view"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/layer_ad_bg"
        android:orientation="horizontal">

        <TextView
