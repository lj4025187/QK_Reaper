<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_ad_item_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBFBFC"
    android:paddingEnd="10dp"
    android:paddingStart="10dp">

    <TextView
        android:id="@+id/id_ad_item_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/id_ad_desc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_ad_item_index">

        <TextView
            android:id="@+id/id_ad_view_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_ad_detail_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_ad_src_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/id_ad_uuid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_ad_desc_layout"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/id_ad_extra_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_ad_uuid"
        android:layout_marginBottom="6dp">

        <TextView
            android:id="@+id/id_ad_image_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/id_ad_extra2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/id_ad_custom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_ad_extra_layout"
        android:layout_marginTop="6dp"
        android:text="@string/ad_item_title_default"
        android:textColor="#454545"
        android:textSize="20dp" />

    <RelativeLayout
        android:id="@+id/id_ad_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_ad_custom_title"
        android:background="#AF9B9BFC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_ad_image_view_front"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:src="@mipmap/image_view_default"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/id_ad_image_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:src="@mipmap/image_view_default" />

            <ImageView
                android:id="@+id/id_ad_image_view_behind"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:src="@mipmap/image_view_default"
                android:visibility="gone" />

        </LinearLayout>

        <include layout="@layout/ad_flag_layout" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_ad_custom_desc_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_ad_view"
        android:background="@drawable/layer_ad_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_ad_custom_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/id_ad_custom_action"
            android:maxLines="1"
            android:text="@string/ad_item_desc_default"
            android:textColor="#999999"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/id_ad_custom_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/layer_ad_btn"
            android:padding="5dp"
            android:text="@string/ad_item_action_default"
            android:textColor="#ffffff" />
    </RelativeLayout>

</RelativeLayout>